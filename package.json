{
  "name": "mediaxml",
  "version": "0.6.3",
  "description": "A general purpose module for working with XML that includes first class support for media manifests like ADI, mRSS, and SCTE-236.",
  "scripts": {
    "test": "tape tests",
    "docs:build": "npm run docs:build:html && npm run docs:build:md",
    "docs:build:md": "documentation build index.js -a public -f md -g -o docs/api.md -c docs/md.yml  --markdown-toc-max-depth=4",
    "docs:build:html": "documentation build index.js -t node_modules/clean-documentation-theme -a public -f html -g -o docs -c docs/html.yml",
    "docs:server": "documentation serve -t node_modules/clean-documentation-theme -w index.js -a public -g -c docs/html.yml"
  },
  "bin": {
    "mxml": "bin/mxml",
    "mxpkg": "bin/mxpkg"
  },
  "keywords": [
    "mrss",
    "adi1",
    "adi3",
    "ansi",
    "scte",
    "236",
    "2017",
    "cable",
    "labs",
    "content",
    "metadata",
    "media",
    "xml",
    "manifest",
    "package"
  ],
  "author": "Joseph Werle <joseph.werle@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@12core/chromafi": "^3.0.3",
    "blake2b": "^2.1.3",
    "camelcase": "^6.2.0",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "chrono-node": "^2.2.6",
    "cli-truncate": "^2.1.0",
    "date-and-time": "^1.0.0",
    "debug": "^4.3.1",
    "defined": "^1.0.0",
    "entities": "^2.2.0",
    "env-paths": "^2.2.1",
    "fast-xml-parser": "^3.19.0",
    "get-uri": "^3.0.2",
    "glob": "^7.1.6",
    "highlight.js": "^10.7.0",
    "htmlparser2": "^6.1.0",
    "inverted-promise": "^1.0.1",
    "is-url-superb": "^5.0.0",
    "jsonata": "^1.8.4",
    "map-extend": "^0.1.0",
    "mime": "^2.5.2",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "mutexify": "^1.3.1",
    "nanoassert": "^2.0.0",
    "npt-timecode": "^0.1.2",
    "number-to-words": "^1.2.4",
    "ora": "^5.4.0",
    "param-case": "^3.0.4",
    "pretty-ms": "^7.0.1",
    "rimraf": "^3.0.2",
    "smpte-timecode": "^1.2.3",
    "streamx": "^2.10.3",
    "tinyduration": "^3.2.1",
    "to-snake-case": "^1.0.0"
  },
  "devDependencies": {
    "clean-documentation-theme": "^0.5.2",
    "documentation": "^13.2.1",
    "eslint": "^7.22.0",
    "nyc": "^15.1.0",
    "tape": "^5.2.2"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "example": "example",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/little-core-labs/mediaxml.git"
  },
  "bugs": {
    "url": "https://github.com/little-core-labs/mediaxml/issues"
  },
  "homepage": "https://github.com/little-core-labs/mediaxml#readme"
}
